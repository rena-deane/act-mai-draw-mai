{
  "name": "act-mai-draw-mai",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "budo . -d --serve bundle.js --live",
    "build": "browserify . -o bundle.js -g uglifyify",
    "test": "browserify test/*.js | node | tap-spec",
    "dist": "mkdir -p dist && bash -c 'cp *.{js,html,css} dist'",
    "push": "gh-pages -d dist",
    "deploy": "npm run build && npm run dist && npm run push"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "dependencies": {
    "body-parser": "~1.15.1",
    "browserify": "^13.0.1",
    "cookie-parser": "~1.4.3",
    "debug": "~2.2.0",
    "express": "~4.13.4",
    "hbs": "~4.0.0",
    "knex": "^0.11.7",
    "morgan": "~1.7.0",
    "serve-favicon": "~2.3.0",
    "sqlite3": "^3.1.4",
    "superagent": "^2.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.9.0",
    "babelify": "^7.3.0",
    "budo": "^8.3.0",
    "handlebars": "^4.0.5",
    "handlebars-loader": "^1.3.0",
    "nodemon": "^1.9.2",
    "supertest": "^1.2.0",
    "uglifyify": "^3.0.2",
    "watchify": "^3.7.0"
  }
}
